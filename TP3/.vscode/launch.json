    "version": "0.2.0",
    "configurations": [
        {
            // for Linux
            "name": "(gdb) Launch cunit",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/runner",
            "args": ["${workspaceRoot}/N4_K3_0", "1"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
          }
    ]
    
}